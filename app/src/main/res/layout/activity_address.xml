<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".address.AddressActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/upcoming_job_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/white"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Set Address"
        app:titleTextColor="@color/colorPrimaryDark" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="30dp"
        app:cardBackgroundColor="#707070"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/upcoming_job_toolbar"
        app:layout_constraintBottom_toTopOf="@+id/guideline6">

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/select_address"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#0F9763"
        android:text="Select Address"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/button_background_behind_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline6"/>

    <TextView
        android:id="@+id/orLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:textColor="#707070"
        app:layout_constraintStart_toStartOf="@+id/select_address"
        app:layout_constraintEnd_toEndOf="@+id/select_address"
        app:layout_constraintTop_toBottomOf="@+id/select_address"/>

    <TextView
        android:id="@+id/sign_up_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:textColor="#0F9763"
        android:text="@string/set_location_manually"
        app:layout_constraintTop_toBottomOf="@+id/orLabel"
        app:layout_constraintStart_toStartOf="@+id/select_address"
        app:layout_constraintEnd_toEndOf="@+id/select_address"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

</androidx.constraintlayout.widget.ConstraintLayout>